@model AbweAddressBook.Models.Contact
@{
    string title = ViewBag.Action + "Contact";
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2> 
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="NickName" class="form-label"></label>
        <input asp-for="NickName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <input type="hidden" asp-for="DateCreated"/>
    <intput type="hidden" asp-for="ContactId"/>
    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-controller="Contact" asp-action="Details" class="btn btn-secondary">Cancel</a>

</form>